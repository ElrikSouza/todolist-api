{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "build",
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": true
    }
}
